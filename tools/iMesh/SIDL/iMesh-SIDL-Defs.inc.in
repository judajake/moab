iMesh_DIR = @abs_srcdir@/..

include ${iMesh_DIR}/iMesh-Defs.inc

iMesh_SIDLINCLUDEDIR = @abs_srcdir@
iMesh_SIDLLIBDIR = @abs_builddir@

iMesh_SIDL_INCLUDES = \
      -I${iMesh_SIDLINCLUDEDIR} -I${iMesh_SIDLINCLUDEDIR} -I${iMesh_SIDLINCLUDEDIR}/bserver \
       -I${iMesh_SIDLINCLUDEDIR}/mserver -I@BABEL_DIR@/include ${iMesh_INCLUDES} 

iMesh_SIDL_LIBS = \
      -L${iMesh_SIDLLIBDIR} -liMeshserver -L@BABEL_DIR@/lib -lsidl \
      -Wl,-rpath,${iMesh_SIDLLIBDIR} -Wl,-rpath,${iMesh_SIDLLIBDIR} -Wl,-rpath,@BABEL_DIR@/lib ${iMesh_LIBS}

iMesh_SIDL_FILES = \
      ${iMesh_SIDLLIBDIR}/libiMeshserver.so

